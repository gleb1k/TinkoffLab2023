<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_match_const"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="6dp"
        android:text="@string/match"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_match_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/base_number_big"
        android:layout_marginStart="4dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_match_const"
        app:layout_constraintStart_toEndOf="@+id/tv_match_const"
        app:layout_constraintTop_toTopOf="@+id/tv_match_const" />


    <TextView
        android:id="@+id/tv_winner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/base_team_victory"
        android:textAllCaps="true"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_match_id" />

    <TextView
        android:id="@+id/tv_match_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/base_score"
        app:layout_constraintBottom_toBottomOf="@+id/tv_radiant_kills"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_radiant_kills" />

    <TextView
        android:id="@+id/tv_radiant_kills"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:text="@string/base_number"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/tv_match_time"
        app:layout_constraintTop_toBottomOf="@+id/tv_winner" />

    <TextView
        android:id="@+id/tv_dire_kills"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="@string/base_number"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/tv_match_time"
        app:layout_constraintTop_toTopOf="@+id/tv_radiant_kills" />

</androidx.constraintlayout.widget.ConstraintLayout>
