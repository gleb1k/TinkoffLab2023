<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@color/background_test">

    <TextView
        android:id="@+id/tv_outcome_const"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="140dp"
        android:text="Outcome:"
        android:layout_marginStart="66dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_net"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="999.9k"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_assists"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="99"
        app:layout_constraintEnd_toStartOf="@+id/tv_net"
        app:layout_constraintTop_toTopOf="@+id/tv_net" />

    <TextView
        android:id="@+id/tv_deaths"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:text="99"
        app:layout_constraintEnd_toStartOf="@+id/tv_assists"
        app:layout_constraintTop_toTopOf="@+id/tv_assists" />

    <TextView
        android:id="@+id/tv_kills"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:text="99"
        app:layout_constraintEnd_toStartOf="@+id/tv_deaths"
        app:layout_constraintTop_toTopOf="@+id/tv_deaths" />

</androidx.constraintlayout.widget.ConstraintLayout>
